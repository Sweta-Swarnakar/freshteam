<div class="functionalities">
  <label class="browse">Browse: </label>
  <BsDropdown as |dd|>

    <dd.toggle>{{selectedTeam}}<span class="caret">

      </span></dd.toggle>
    <dd.menu as |ddm|>
      <ul>
        {{#each this.teams as |team|}}

          {{! write a helper function equal to check if passed selectedTeam is same as team if true add active class }}
          <li
            {{action "selectTeam" team}}
            data-test-id={{team}}
            class={{if (equal-helper selectedTeam team) "active-bg"}}
          >{{team}}
            {{#if (equal-helper selectedTeam team)}}
              {{svg-jar "checkbox"}}
            {{/if}}</li>
        {{/each}}
      </ul>

    </dd.menu>
  </BsDropdown>
  <label class="sort">Sort By: </label>

  <BsDropdown as |dd|>

    <dd.toggle data-test-id="sort-click"><span class="caret">

      </span>
      {{#if (equal-helper selectedType "first_name")}}
        First Name
      {{else}}
        Last Name
      {{/if}}</dd.toggle>
    <dd.menu as |ddm|>
      <ul>
        {{#each this.type as |type|}}

          <li
            {{action "selectType" type.value}}
            data-test-id={{type.value}}
            class={{if (equal-helper selectedType type.value) "active-bg"}}
          >{{type.displayName}}
            {{#if (equal-helper selectedType type.value)}}
              {{svg-jar "checkbox"}}
            {{/if}}
          </li>
        {{/each}}
        <hr />

        {{#each this.order as |order|}}

          <li
            {{action "selectOrder" order}}
            data-test-id={{order}}
            class={{if (equal-helper selectedOrder order) "active-bg"}}
          >{{order}}
            {{#if (equal-helper selectedOrder order)}}
              {{svg-jar "checkbox"}}
            {{/if}}</li>

        {{/each}}

      </ul>

    </dd.menu>
  </BsDropdown>

  {{svg-jar "search" class="search-icon"}}
  {{input
    value=value
    class="search"
    key-up=(action "handleFilterEntry" this.value)
    class="light"
    placeholder="Filter By Name"
  }}

</div>

{{!-- {{log 'searched array:' this.searchedArray}} --}}

{{#if this.activeUsers}}
  <div class="found-card-container">
    {{#each this.activeUsers as |user|}}

      {{#user-card user=user isdeleted = this.isdeleted}}{{/user-card}}

    {{/each}}
  </div>
{{else}}
  <div class="not-found-card-container">
    {{svg-jar "directory" class="not-found-icon"}}

    <div class="not-found-text-1">No employees to list in this view</div>
    <div class="not-found-text-2">try looking for something less specific</div>
  </div>

{{/if}}